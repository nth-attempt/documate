# .env
CLONE_PATH="cloned_repos"
VECTOR_DB_PATH="vector_stores"

# --- Provider Configuration ---
# Set the provider. Options: "google", "azure"
EMBEDDING_PROVIDER="azure"
CHAT_PROVIDER="azure"

# --- Google AI Studio Keys (kept for reference) ---
# GOOGLE_API_KEY="..."

# --- AZURE OAI CONFIGURATION ---
AZURE_OPENAI_ENDPOINT="https://your-resource-name.openai.azure.com/" # Your Azure OpenAI resource endpoint
AZURE_OPENAI_API_VERSION="2024-02-01" # The API version you want to use
AZURE_CHAT_DEPLOYMENT_NAME="your-chat-deployment-name" # e.g., gpt-4
AZURE_EMBEDDING_DEPLOYMENT_NAME="your-embedding-deployment-name" # e.g., text-embedding-ada-002

# --- AZURE ACTIVE DIRECTORY (AAD) Certificate Auth ---
AZURE_TENANT_ID="your-azure-tenant-id"
AZURE_CLIENT_ID="your-service-principal-client-id"
AZURE_CERTIFICATE_PATH="./path/to/your/private-key.pem" # Path to your .pem certificate file